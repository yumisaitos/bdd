generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}





model Music {
  id Int @id @default(autoincrement())
  name String @db.VarChar(50)
  singer	String	@db.Text
  album String @db.VarChar(50)
  gender	String	@db.Text
  single	Boolean @db.TinyInt
  lancamento	Int	@db.Year
  duracao	DateTime @db.Time
}

enum UserType {
  ADMIN
  USUARIO
}

model User{
  id BigInt  @id @default(autoincrement())
  name String @db.VarChar(50)
  user String @unique
  email String @unique
  Type UserType
  dateBorn DateTime @db.Date
  dateRegister DateTime @default(now()) @db.Timestamp(6)
}

model Produto {
  id	Int	@id @db.MediumInt
  name String @db.VarChar(50)
  description	String	@db.Text
  price	Decimal		@db.Decimal(8,2)
  assessment Decimal @db.Decimal()
  login	DateTime	@default(now()) @db.Timestamp
}


